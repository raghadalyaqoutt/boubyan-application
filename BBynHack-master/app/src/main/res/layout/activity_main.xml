                        android:textColor="#d22630"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDemo2"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintBottom_toTopOf="@+id/cardDwaniya"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageEx1"
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_bank" />

                            <TextView
                                android:id="@+id/textSbks"
                                android:layout_width="260dp"
                                android:layout_height="match_parent"
                                android:fontFamily="TheSansArabic"
                                android:gravity="center"
                                android:text="Starbucks   20% OFF"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btnlct1"
                                android:layout_width="78dp"
                                android:layout_height="41dp"
                                android:background="#FCEBED"
                                android:fontFamily="TheSansArabic"
                                android:text="FIND"
                                android:textColor="#54585A"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDemo5"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintBottom_toTopOf="@+id/cardDwaniya"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
