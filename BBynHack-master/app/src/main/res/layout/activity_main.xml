                    app:layout_constraintBottom_toTopOf="@+id/cardDwaniya"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="296dp"
                            android:layout_height="match_parent"
                            android:fontFamily="TheSansArabic"
                            android:gravity="center"
                            android:text="Netflix              4 KWD"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnPay1"
                            android:layout_width="78dp"
                            android:layout_height="41dp"
                            android:background="#B7E4FDC4"
                            android:fontFamily="TheSansArabic"
                            android:text="Pay"
                            android:textColor="#429645"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDwaniya"
                    android:layout_width="369dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="91dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardDemo1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="37dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_bank" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="251dp"
                            android:layout_height="match_parent"
                            android:fontFamily="TheSansArabic"
                            android:gravity="center"
                            android:text="Dwaniya    10 KWD"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnPay2"
                            android:layout_width="79dp"
                            android:layout_height="match_parent"
                            android:background="#B7E4FDC4"
                            android:fontFamily="TheSansArabic"
                            android:text="PAY"
                            android:textColor="#429645"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardExplor"
                android:layout_width="375dp"
                android:layout_height="216dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardSub">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
